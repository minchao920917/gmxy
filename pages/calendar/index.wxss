/* index.wxss */

.baners image {
  width: 100%;
  height: 26vh;
  vertical-align: middle;
  position: relative;
}

.baners .info {
  position: absolute;
  width: 100%;
  height: 26vh;
  box-sizing: border-box;
  padding: 5%;
  z-index: 5;
  color: #fff;
  line-height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.baners .info .tip {
  width: 50vw;
  word-break: break-all;
  display: block;
}

.baners .today {
  font-size: 1rem;
  width: 40vw;
  text-align: right;
}

.baners .info .today text {
  background: #ad0110;
  color: #fff;
  padding: 10rpx 15rpx;
  margin: 10rpx;
  border-radius: 10rpx;
}

.datalist {
  background: #f5f5f5;
  position: relative;
}

.update {
  position: absolute;
  right: 0;
  z-index: 22;
  color: #999;
  padding: 15rpx 20rpx;
  height: 8vh;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
}

.datalist .tit_time {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  height: 8vh;
  box-sizing: border-box;
  color: #999;
  align-items: baseline;
  width: 100%;
  background: #f5f5f5;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 20;
}

.datalist .tit_time .month {
  font-size: 1.4rem;
  color: #111;
}

.content_bar {
  display: flex;
  padding: 8vh 20rpx 0 20rpx;
  position: relative;
  justify-content: space-between;
  flex-wrap: wrap;
}

.content_bar .line {
  align-self: stretch;
  background: #ddd;
  width: 0.8vw;
  position: absolute;
  height: 100%;
  z-index: 10;
  top: 0;
  left: 2.5vw;
}

.content_bar .list {
  width: 90vw;
  padding-left: 6vw;
}



.content_bar .list .infos {
  background: #fff;
  box-shadow: 0 0 10px #ccc;
  border-radius: 20rpx;
  margin: 20rpx 0;
  position: relative;
  width: 100%;
}

.content_bar .list .times {
  display: flex;
  justify-content: space-between;
  padding: 22rpx;
  border-bottom: 1px solid #ddd;
  font-weight: bold;
}

.content_bar .infos:before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  background: #ccc;
  border-radius: 50%;
  left: -7vw;
  top: 30rpx;
  z-index: 10;
}

.datalist .infos .times text {
  padding: 0 20rpx;
}

.datalist .infos .times .today{ color: #e2233e}

.datalist .infos .item {
  border-bottom: 1px solid #ddd;
  padding: 20rpx;
  line-height: 56rpx;
}

.datalist .infos .item .name {
  color: #888;
}

.datalist .infos .item .chuang {
  background: #ea5504;
  color: #fff;
  padding: 5rpx;
  margin-right: 10rpx;
}

.datalist .infos .item .zhong {
  background: #007de6;
  color: #fff;
  padding: 5rpx;
  margin-right: 10rpx;
}

.datalist .infos .item .hu {
  background: #e2233e;
  color: #fff;
  padding: 5rpx;
  margin-right: 10rpx;
}

.datalist .infos .item .blod {
  font-weight: bold;
  color: #000;
  padding-right: 10rpx;
}

.datalist .infos .flor {
  display: flex;
  justify-content: space-between;
  color: #888;
  padding: 0 5%;
}

.datalist .infos .ban, .datalist .infos .ban text {
  width: 50%;
  display: block;
  float: left;
  color: #333;
}

.datalist .infos .ban .name {
  text-align: right;
  padding-right: 5px;
  box-sizing: border-box;
  color: #888;
}


