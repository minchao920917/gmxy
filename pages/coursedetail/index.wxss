/* pages/coursedetail/index.wxss */

.sp {
  padding: 15rpx 30rpx;
  background: #fff;
  margin-top: 10rpx;
}

video {
  width: 100%;
  height: 400rpx;
  display: inline-block;
  line-height: 0;
  overflow: hidden;
  position: relative;
  top: -2rpx;
}

.sp .img {
  width: 100%;
  height: 420rpx;
}

.play {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 136rpx;
  height: 136rpx;
  display: block;
  margin-left: -68rpx;
  margin-top: -68rpx;
  background: rgba(0, 0, 0, 0);
  border: none !important;
  border-radius: 0;
}

.play image {
  width: 136rpx;
  height: 136rpx;
  border: none !important;
}

.vo-tit {
  font-size: 32rpx;
  color: #1b1b1b;
  border-bottom: 1rpx solid #d5d5d5;
  padding: 20rpx 0;
  height: 45rpx;
}

.vo-tit text.left {
  width: 12rpx;
  height: 30rpx;
  float: left;
  margin-top: 10rpx;
  display: block;
  background: #d1141b;
}

.vo-tit text.right {
  margin-left: 20rpx;
  line-height: 45rpx;
  float: left;
}

.vo-item {
  clear: both;
  border-bottom: 1rpx solid #efeef3;
  font-size: 30rpx;
  color: #3e3e3e;
  height: 100rpx;
  padding: 0 30rpx;
}

.vo-name {
  float: left;
  margin-top: 30rpx;
  width: 65%;
  text-overflow: ellipsis;
white-space:nowrap;
overflow:hidden;
}

.vo-lock {
  width: 35%;
  font-size: 24rpx;
  color: #d1141b;
  line-height: 45rpx;
  float: right;
  margin-top: 30rpx;
  overflow: hidden;
}

.vo-foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d5d5d5;
  text-align: center;
}

.vo-foot .vo-total {
  float: left;
  width: 530rpx;
  font-size: 32rpx;
  line-height: 98rpx;
  color: #d1141b;
  letter-spacing: 0;
}

.vo-foot .vo-btn {
  float: right;
  font-size: 36rpx;
  line-height: 98rpx;
  color: #fff;
  letter-spacing: 0;
  background: #d1141b;
  width: 220rpx;
  font-weight: 600;
}
.active{
  color: #d1141b;
}