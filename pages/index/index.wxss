/**index.wxss**/

.swiper {
  height: 300rpx;
}

.swiper image {
  width: 100%;
  height: 300rpx;
}

.navs {
  display: flex;
  flex-flow: row wrap;
  background: #fff;
  padding: 10rpx 0rpx;
  height: 230rpx;
  align-items: center;
}

.navs .list {
  flex-grow: 2;
  width: 110rpx;
  background: #fff;
  box-sizing: border-box;
  text-align: center;
  align-content: space-around;
}

.navs .list navigator {
  padding: 0;
}



.navs image {
  width: 110rpx;
  height: 110rpx;
}

.navs .list text {
  display: block;
  padding-top: 30rpx;
  font-size: 24rpx;
  color: #535353;
}

.shipin {
  margin-top: 20rpx;
  height: 504rpx;
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}
.title{
  height: 50rpx;
  padding: 30rpx;
}

.shipin .sp-tit {
  float: left;
  font-size: 36rpx;
  color: #1c1c1c;
  font-weight: bold;
}
.shipin .sp-more{
  float: right;
  font-size: 24rpx;
  color: #D1141B;
  line-height: 50rpx;
}
.sp{
  /* padding: 30rpx 0; */
}
.sp .video,.sp .img{
  width: 100%;
  height: 345rpx;
}
.play{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 136rpx;
  height: 136rpx;
  display: block;
  margin-left: -68rpx;
  margin-top: -68rpx;
  background: rgba(0,0,0,0);
  border: none !important;
  border-radius: 0;
}
.play image{
  width: 136rpx;
  height: 136rpx;
  border: none !important;
}